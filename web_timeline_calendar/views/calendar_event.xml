<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="calendar_event_timeline_view_timeline" model="ir.ui.view">
        <field name="model">calendar.event</field>
        <field name="type">timeline</field>
        <field name="arch" type="xml">
            <timeline date_start="start"
                      date_stop="stop"
                      string="Meetings"
                      default_group_by="user_ids"
                      event_open_popup="true"
                      zoomKey="ctrlKey"
                      color_field="color"
                      mode="day">
            </timeline>
        </field>
    </record>

    <record id="calendar.action_calendar_event" model="ir.actions.act_window">
        <field name="view_mode">calendar,timeline,tree</field>
        <field name="context">{"search_default_week": 1}</field>
    </record>

    <record id="calendar_event_form_inherit" model="ir.ui.view">
        <field name="name">calendar.event.inherit.form.color</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location']" position="after">
                <field name="color_id"/>
            </xpath>
        </field>
    </record>

    <record id="calendar_event_color_view_tree" model="ir.ui.view">
        <field name="model">calendar.event.color</field>
        <field name="name">calendar.event.color.tree</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="color" widget="color"/>
            </tree>
        </field>
    </record>

    <record id="calendar_event_color_view_form" model="ir.ui.view">
        <field name="model">calendar.event.color</field>
        <field name="type">form</field>
        <field name="name">calendar.event.color.form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" widget="color"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="calendar_event_color_action">
        <field name="name">Calendar event color</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">calendar.event.color</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="calendar_event_color_menu" name="Calendar event color" sequence="30"
    parent="calendar.menu_calendar_configuration" action="calendar_event_color_action" />

</odoo>
